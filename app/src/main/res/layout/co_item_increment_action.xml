<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/action_title"
        android:layout_width="@dimen/co_item_actionWidth"
        android:layout_height="@dimen/co_item_actionTitleGIHeight"
        android:gravity="center"
        android:layout_marginBottom="@dimen/divider"/>
    <TextView android:id="@+id/action_count"
        android:layout_width="@dimen/co_item_actionWidth"
        android:layout_height="@dimen/co_item_actionCountGDHeight"
        android:gravity="center"
        android:textSize="@dimen/textsize_coIncrementAction"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/divider"/>
    <TextView android:id="@+id/action_capacity"
        android:layout_width="@dimen/co_item_actionWidth"
        android:layout_height="@dimen/co_item_actionCapGDHeight"
        android:gravity="center"/>
</LinearLayout>