<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_actionpanelBlue">

    <LinearLayout android:id="@+id/ll_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_borderWidth"
        android:padding="@dimen/dialoginfo_contentPadding"
        android:background="@color/bg_contentBlue"
        android:orientation="vertical"/>

    <LinearLayout style="@style/dialog_action_button_container">
        <Button android:id="@+id/action_positive"
            android:background="@drawable/action_positive"
            android:layout_marginLeft="@dimen/dialog_borderWidth"
            android:layout_marginRight="@dimen/dialog_borderWidth"
            android:text="@android:string/ok"
            style="@style/dialog_action_button"/>
    </LinearLayout>
</LinearLayout>