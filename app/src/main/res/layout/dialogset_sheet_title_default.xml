<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialogset_contentPadding"
    android:orientation="vertical">
    <TextView android:text="@string/tip_sheetTitle"
        style="@style/tip"/>

    <LinearLayout android:id="@+id/ll_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_borderWidth"
        android:layout_marginRight="@dimen/dialog_borderWidth"
        android:layout_marginBottom="@dimen/dialogset_contentBottomOffset"
        android:background="@drawable/input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_sheetTitle"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:textStyle="bold"
            style="@style/et_one_line"/>
        <Button android:id="@+id/btn_title_clear"
            style="@style/btn_clear" />
    </LinearLayout>
</LinearLayout>